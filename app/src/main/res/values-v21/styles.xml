<resources>

    <style name="Theme.Music" parent="Theme.Music.Base">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.Music.Light" parent="Theme.Music.Base.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.Music.Black" parent="Theme.Music.Base.Black">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.Material.TextView" />

    <style name="TextViewStyleIm" parent="TextViewStyle">
        <item name="android:hyphenationFrequency">none</item>
    </style>

    <style name="Theme.Music.Notification" parent="@android:style/TextAppearance.Material.Notification" />

    <style name="Theme.Music.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title" />

    <style name="MusicProgressSlider" parent="MusicProgressSliderParent">
        <item name="android:padding">0dp</item>
    </style>

</resources>